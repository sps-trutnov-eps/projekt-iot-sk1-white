<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'ash-grey': {'50':'#f2f3f1','100':'#e6e7e4','200':'#ccd0c8','300':'#b3b8ad','400':'#9aa092','500':'#808877','600':'#676d5f','700':'#4d5247','800':'#33372f','900':'#1a1b18','950':'#121311'},
            'silver': {'50':'#f2f3f2','100':'#e5e6e5','200':'#cbcdcb','300':'#b1b4b1','400':'#979b97','500':'#7d827d','600':'#646864','700':'#4b4e4b','800':'#323432','900':'#191a19','950':'#111211'},
            'mauve-shadow': {'50':'#f4f0f3','100':'#e9e2e7','200':'#d3c5cf','300':'#bda8b7','400':'#a78ba0','500':'#916e88','600':'#74586d','700':'#574251','800':'#3a2c36','900':'#1d161b','950':'#140f13'},
            'vintage-grape': {'50':'#f3f0f4','100':'#e7e2e9','200':'#cfc4d4','300':'#b7a7be','400':'#a08aa8','500':'#886c93','600':'#6d5775','700':'#514158','800':'#362b3b','900':'#1b161d','950':'#130f15'},
            'midnight-violet': {'50':'#f3eff5','100':'#e8e0eb','200':'#d0c1d7','300':'#b9a2c3','400':'#a183af','500':'#8a639c','600':'#6e507c','700':'#533c5d','800':'#37283e','900':'#1c141f','950':'#130e16'}
          }
        }
      }
    }
  </script>
</head>
<body class="bg-ash-grey-50 min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Logo & Header -->
    <div class="text-center mb-8">
      <div class="inline-block mb-4">
        <div class="w-16 h-16 bg-gradient-to-br from-vintage-grape-500 to-midnight-violet-500 rounded-2xl shadow-lg shadow-midnight-violet-500/20"></div>
      </div>
      <h1 class="text-3xl font-bold text-midnight-violet-900 mb-2"><%= projectName %></h1>
      <p class="text-silver-600">IoT Control Panel</p>
    </div>

    <!-- Login Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-ash-grey-200 p-8">
      <h2 class="text-2xl font-semibold text-midnight-violet-900 mb-6">Přihlášení</h2>
      
      <form id="loginForm" class="space-y-5">
        <!-- Username Field -->
        <div>
          <label for="username" class="block text-sm font-medium text-midnight-violet-900 mb-2">
            Uživatelské jméno
          </label>
          <input 
            type="text" 
            id="username" 
            name="username"
            class="w-full px-4 py-3 bg-ash-grey-100 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500 focus:border-transparent transition"
            placeholder="Zadejte uživatelské jméno"
            required
          >
        </div>

        <!-- Password Field -->
        <div>
          <label for="password" class="block text-sm font-medium text-midnight-violet-900 mb-2">
            Heslo
          </label>
          <input 
            type="password" 
            id="password" 
            name="password"
            class="w-full px-4 py-3 bg-ash-grey-100 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500 focus:border-transparent transition"
            placeholder="Zadejte heslo"
            required
          >
        </div>

        <!-- Remember Me -->
        <div class="flex items-center justify-between">
          <label class="flex items-center">
            <input 
              type="checkbox" 
              class="w-4 h-4 text-vintage-grape-500 bg-ash-grey-50 border-ash-grey-300 rounded focus:ring-2 focus:ring-vintage-grape-500"
            >
            <span class="ml-2 text-sm text-silver-600">Zapamatovat si mě</span>
          </label>
          <a href="#" class="text-sm text-vintage-grape-600 hover:text-vintage-grape-700 transition">
            Zapomenuté heslo?
          </a>
        </div>

        <!-- Login Button -->
        <button 
          type="submit"
          class="w-full py-3 bg-gradient-to-r from-vintage-grape-500 to-midnight-violet-500 text-white font-medium rounded-lg shadow-lg shadow-midnight-violet-500/20 hover:shadow-midnight-violet-500/40 hover:from-vintage-grape-600 hover:to-midnight-violet-600 transition transform hover:-translate-y-0.5"
        >
          Přihlásit se
        </button>
      </form>
    </div>

    <!-- Footer -->
    <div class="text-center mt-6 text-sm text-silver-600">
      <p>&copy; 2026 Projekt IoT SK1 White</p>
    </div>
  </div>

  <script src="/js/common/app.js"></script>
</body>
</html>
