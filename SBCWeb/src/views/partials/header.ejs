<!-- Dashboard Header -->
<header class="bg-white shadow-sm border-b border-ash-grey-200 sticky top-0 z-30">
  <div class="px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Left Side -->
      <div class="flex items-center space-x-4">
        <button id="toggleSidebar" class="text-silver-600 hover:text-silver-800 lg:hidden">
          <i class="fas fa-bars text-xl"></i>
        </button>
        <button id="toggleSidebarDesktop" class="hidden lg:flex items-center justify-center w-10 h-10 rounded-lg text-midnight-violet-900 hover:bg-ash-grey-100 transition-colors">
          <i class="fas fa-angles-right"></i>
        </button>
        <h1 class="text-2xl font-bold text-midnight-violet-900">Dashboard</h1>
      </div>

      <!-- Right Side -->
      <div class="flex items-center space-x-4">

        <button class="header-btn" title="Charts">
          <i class="fas fa-home w-5"></i>
          <span class="hidden md:inline">Dashboard</span>
        </button>

        <!-- Charts -->
        <button class="header-btn" title="Charts">
          <i class="fas fa-chart-line"></i>
          <span class="hidden md:inline">Charts</span>
        </button>

        <!-- Notifications -->
        <button class="header-btn relative" title="Notifications">
          <i class="fas fa-bell"></i>
          <span class="absolute -top-1 -right-1 w-4 h-4 bg-vintage-grape-500 text-white text-xs rounded-full flex items-center justify-center">3</span>
        </button>

        <!-- Settings -->
        <button class="header-btn" title="Settings">
          <i class="fas fa-cog"></i>
          <span class="hidden md:inline">Settings</span>
        </button>

        <!-- Logout -->
        <button id="logout" class="header-btn bg-vintage-grape-100 hover:bg-vintage-grape-200 text-vintage-grape-800 px-6 py-3" title="Logout">
          <i class="fas fa-sign-out-alt"></i>
          <span class="hidden md:inline">Logout</span>
        </button>
      </div>
    </div>
  </div>
</header>
