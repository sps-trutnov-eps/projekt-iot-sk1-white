<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
  <!-- Stat Card 1 -->
  <div class="bg-white rounded-lg shadow-sm border border-ash-grey-200 p-6 stat-card">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-vintage-grape-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-microchip text-vintage-grape-600 text-xl"></i>
      </div>
    </div>
    <h3 class="text-silver-600 text-sm font-medium mb-1">Active MCUs</h3>
    <p id="statActiveMCUs" class="text-3xl font-bold text-midnight-violet-900">-</p>
  </div>

  <!-- Stat Card 2 -->
  <div class="bg-white rounded-lg shadow-sm border border-ash-grey-200 p-6 stat-card">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-mauve-shadow-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-wifi text-mauve-shadow-600 text-xl"></i>
      </div>
    </div>
    <h3 class="text-silver-600 text-sm font-medium mb-1">Connected Sensors</h3>
    <p id="statConnectedSensors" class="text-3xl font-bold text-midnight-violet-900">-</p>
  </div>

  <!-- Stat Card 3 -->
  <div class="bg-white rounded-lg shadow-sm border border-ash-grey-200 p-6 stat-card">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-ash-grey-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-database text-ash-grey-600 text-xl"></i>
      </div>
      <span class="text-silver-600 text-sm font-medium">Today</span>
    </div>
    <h3 class="text-silver-600 text-sm font-medium mb-1">Data Points</h3>
    <p id="statDataPoints" class="text-3xl font-bold text-midnight-violet-900">-</p>
  </div>

  <!-- Stat Card 4 -->
  <div class="bg-white rounded-lg shadow-sm border border-ash-grey-200 p-6 stat-card">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-vintage-grape-100 rounded-lg flex items-center justify-center">
        <i class="fas fa-exclamation-triangle text-vintage-grape-600 text-xl"></i>
      </div>
    </div>
    <h3 class="text-silver-600 text-sm font-medium mb-1">Alerts</h3>
    <p id="statAlerts" class="text-3xl font-bold text-midnight-violet-900">-</p>
  </div>
</div>
