<!-- Dashboard Header -->
<header class="bg-white shadow-sm border-b border-ash-grey-200 sticky top-0 z-30">
  <div class="px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Left Side -->
      <div class="flex items-center space-x-4">
        <button id="toggleSidebar" class="text-silver-600 hover:text-silver-800 lg:hidden">
          <i class="fas fa-bars text-xl"></i>
        </button>
        <button id="toggleSidebarDesktop" class="hidden lg:flex items-center justify-center w-10 h-10 rounded-lg text-midnight-violet-900 hover:bg-ash-grey-100 transition-colors">
          <i class="fas fa-angles-left"></i>
        </button>
        <h1 class="text-2xl font-bold text-midnight-violet-900">Dashboard</h1>
      </div>

      <!-- Right Side -->
      <div class="flex items-center space-x-4">

        <a href="/mcu/mcu" class="header-btn" title="MCU Controllers">
          <i class="fas fa-microchip w-5"></i>
          <span class="hidden md:inline">MCU</span>
        </a>

        <!-- Charts -->
        <button class="header-btn" title="Charts">
          <i class="fas fa-chart-line"></i>
          <span class="hidden md:inline">Charts</span>
        </button>

        <!-- Notifications -->
        <div class="relative" id="notificationContainer">
    <button id="notificationBellBtn" class="header-btn relative p-2 text-silver-500 hover:text-midnight-violet-700 transition" title="Notifications">
        <i class="fas fa-bell text-xl"></i>
        <span id="notificationBadge" class="hidden absolute top-0 right-0 w-4 h-4 bg-red-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center border-2 border-white shadow-sm">
            0
        </span>
    </button>

    <div id="notificationDropdown" class="hidden absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-2xl border border-ash-grey-200 z-[100] overflow-hidden">
        <div class="px-4 py-3 border-b border-ash-grey-100 bg-silver-50 flex justify-between items-center">
            <h3 class="font-bold text-midnight-violet-900 text-sm flex items-center gap-2">
                <i class="fas fa-history text-vintage-grape-500"></i> Historie událostí
            </h3>
            <button id="clearNotificationsBtn" class="text-xs font-semibold text-silver-400 hover:text-red-500 transition-colors">
                Vymazat
            </button>
        </div>
        
        <div id="notificationList" class="max-h-72 overflow-y-auto p-2 bg-white">
            <div class="text-center text-sm text-silver-400 py-6" id="emptyNotifications">
                <i class="fas fa-bell-slash text-2xl mb-2 opacity-50 block"></i>
                Zatím vše běží jak má.
            </div>
        </div>
    </div>
</div>

        <!-- Settings -->
        <button class="header-btn" title="Settings">
          <i class="fas fa-cog"></i>
          <span class="hidden md:inline">Settings</span>
        </button>

      </div>
    </div>
  </div>
</header>
