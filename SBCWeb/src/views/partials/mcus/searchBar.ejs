<!-- Search & Filter Bar -->
<div class="bg-white rounded-xl shadow-sm border border-ash-grey-200 p-4 mb-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="relative flex-1 max-w-md">
      <input 
        type="text" 
        id="searchMCU" 
        placeholder="Hledat MCU..." 
        class="w-full pl-10 pr-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500 focus:border-transparent"
      >
      <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-silver-400"></i>
    </div>
    
    <div class="flex items-center space-x-3">
      <select id="typeSelector" class="px-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500">
        <option value="" disabled selected>Vyberte typ</option>
        <!-- client will fill options via JS; remove server-side loop to avoid types undefined -->
      </select>
      <button id="TypeOpen" type="button" class="ml-2 px-3 py-2 bg-vintage-grape-600 text-white rounded-lg hover:bg-vintage-grape-700 flex items-center" title="Přidat typ MCU">
        <i class="fas fa-plus mr-1"></i> Přidat typ
      </button>
      <select id="filterStatus" class="px-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500">
        <option value="">Všechny stavy</option>
        <option value="online">Online</option>
        <option value="offline">Offline</option>
      </select>
    </div>
  </div>
</div>
