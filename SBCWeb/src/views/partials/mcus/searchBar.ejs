<!-- Search & Filter Bar -->
<div class="bg-white rounded-xl shadow-sm border border-ash-grey-200 p-4 mb-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="relative flex-1 max-w-md">
      <input 
        type="text" 
        id="searchMCU" 
        placeholder="Hledat MCU..." 
        class="w-full pl-10 pr-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500 focus:border-transparent"
      >
      <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-silver-400"></i>
    </div>
    
    <div class="flex items-center space-x-3">
      <select id="filterStatus" class="px-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500">
        <option value="">Všechny stavy</option>
        <option value="online">Online</option>
        <option value="offline">Offline</option>
      </select>
      <div class="flex items-center">
        <select id="TypeSelectorSearchBar" class="px-4 py-2 bg-ash-grey-50 border border-ash-grey-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-vintage-grape-500">
          <option value="" disabled selected>Vyberte typ</option>
          <!-- client will fill options via JS -->
        </select>
        <button id="TypeOpen" type="button" class="ml-2 px-2 py-2 text-sm bg-ash-grey-100 hover:bg-ash-grey-200 rounded-lg flex items-center" title="Upravit vybraný typ">
          <i class="fas fa-edit"></i>
        </button>
      </div>
    </div>
  </div>
</div>
