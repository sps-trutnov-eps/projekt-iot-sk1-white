<div id="sensorModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    
    <div class="fixed inset-0 bg-midnight-violet-900/40 backdrop-blur-sm transition-opacity"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
            
            <div class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg border border-ash-grey-200">
                
                <div class="bg-ash-grey-50 px-4 py-3 sm:px-6 border-b border-ash-grey-100 flex justify-between items-center">
                    <h3 class="text-base font-bold leading-6 text-midnight-violet-900">
                        <i class="fas fa-microchip mr-2 text-vintage-grape-500"></i> Nový Senzor
                    </h3>
                    <button type="button" id="sensorClose" class="text-silver-400 hover:text-gray-500 transition-colors">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <form id="sensorForm">
                    <div class="px-4 py-5 sm:p-6 space-y-4">
                        
                        <div id="sensorError" class="hidden bg-red-50 text-red-600 text-xs p-3 rounded-md border border-red-100 mb-2">
                            <p class="font-bold"></p>
                        </div>

                        <div>
                            <label for="sensorNameInput" class="block text-xs font-bold text-silver-500 uppercase tracking-wide mb-1">Název zařízení</label>
                            <input type="text" name="sensorName" id="sensorNameInput" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-ash-grey-200 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-vintage-grape-600 sm:text-sm sm:leading-6 px-3" placeholder="Např. Kuchyně - ESP">
                        </div>

                        <div>
                            <div class="flex justify-between items-end mb-2 border-b border-ash-grey-100 pb-2">
                                <label class="block text-xs font-bold text-silver-500 uppercase tracking-wide">Měřené hodnoty</label>
                                <button type="button" id="addMetricBtn" class="text-xs font-bold text-vintage-grape-600 hover:text-vintage-grape-800 flex items-center gap-1 transition-colors">
                                    <i class="fas fa-plus-circle"></i> Přidat veličinu
                                </button>
                            </div>

                            <div id="metricsContainer" class="space-y-3 max-h-[200px] overflow-y-auto custom-scrollbar pr-1">
                                </div>
                            
                            <div id="emptyMetricsState" class="text-center py-6 border-2 border-dashed border-ash-grey-100 rounded-lg">
                                <p class="text-xs text-silver-400">Zatím žádné měřené hodnoty.</p>
                                <p class="text-[10px] text-silver-300">Klikněte na "Přidat veličinu"</p>
                            </div>
                        </div>

                    </div>

                    <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6 gap-2">
                        <button type="submit" id="sensorSubmit" class="inline-flex w-full justify-center rounded-md bg-vintage-grape-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-vintage-grape-500 sm:ml-3 sm:w-auto transition-colors">
                            Uložit senzor
                        </button>
                        <button type="button" id="sensorCancel" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto transition-colors">
                            Zrušit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>