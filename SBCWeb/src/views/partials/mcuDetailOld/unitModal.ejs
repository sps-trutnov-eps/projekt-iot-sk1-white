<div id="metricModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-midnight-violet-900/40 backdrop-blur-sm transition-opacity"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-md border border-ash-grey-200">
                
                <div class="bg-ash-grey-50 px-4 py-3 border-b border-ash-grey-100 flex justify-between items-center">
                    <h3 class="text-base font-bold text-midnight-violet-900">
                        <i class="fas fa-plus-circle mr-2 text-vintage-grape-500"></i> Přidat veličinu
                    </h3>
                    <button type="button" id="metricClose" class="text-silver-400 hover:text-gray-500 transition-colors">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <form id="metricForm" class="p-6 space-y-4">
                    <div id="metricError" class="hidden bg-red-50 text-red-600 text-xs p-3 rounded-md border border-red-100">
                        <p class="font-bold"></p>
                    </div>

                    <input type="hidden" id="metricSensorIdInput" name="sensorId">

                    <div>
                        <label for="metricNameInput" class="block text-[10px] font-bold text-silver-500 uppercase mb-1">Název veličiny</label>
                        <input type="text" id="metricNameInput" name="name" required 
                               class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-ash-grey-200 focus:ring-2 focus:ring-vintage-grape-600 sm:text-sm px-3" 
                               placeholder="Např. Teplota vody">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label for="metricTypeInput" class="block text-[10px] font-bold text-silver-500 uppercase mb-1">Typ</label>
                            <select id="metricTypeInput" name="type" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-ash-grey-200 focus:ring-2 focus:ring-vintage-grape-600 sm:text-sm px-2">
                                <option value="temperature">Teplota</option>
                                <option value="humidity">Vlhkost</option>
                                <option value="pressure">Tlak</option>
                                <option value="voltage">Napětí</option>
                                <option value="generic">Ostatní</option>
                            </select>
                        </div>
                        <div>
                            <label for="metricUnitInput" class="block text-[10px] font-bold text-silver-500 uppercase mb-1">Jednotka</label>
                            <input type="text" id="metricUnitInput" name="unit" required 
                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-ash-grey-200 focus:ring-2 focus:ring-vintage-grape-600 sm:text-sm px-3" 
                                   placeholder="°C">
                        </div>
                    </div>

                    <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3 pt-4 border-t border-ash-grey-100">
                        <button type="submit" id="metricSubmit" class="inline-flex w-full justify-center rounded-md bg-vintage-grape-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-vintage-grape-500 sm:col-start-2">
                            Přidat
                        </button>
                        <button type="button" id="metricCancel" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:col-start-1">
                            Zrušit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>