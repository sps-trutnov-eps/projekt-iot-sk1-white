<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail MCU - IoT Control</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'ash-grey': {'50':'#f2f3f1','100':'#e6e7e4','200':'#ccd0c8','300':'#b3b8ad','400':'#9aa092','500':'#808877','600':'#676d5f','700':'#4d5247','800':'#33372f','900':'#1a1b18','950':'#121311'},
            'silver': {'50':'#f2f3f2','100':'#e5e6e5','200':'#cbcdcb','300':'#b1b4b1','400':'#979b97','500':'#7d827d','600':'#646864','700':'#4b4e4b','800':'#323432','900':'#191a19','950':'#111211'},
            'vintage-grape': {'50':'#f3f0f4','100':'#e7e2e9','200':'#cfc4d4','300':'#b7a7be','400':'#a08aa8','500':'#886c93','600':'#6d5775','700':'#514158','800':'#362b3b','900':'#1b161d','950':'#130f15'},
            'midnight-violet': {'50':'#f3eff5','100':'#e8e0eb','200':'#d0c1d7','300':'#b9a2c3','400':'#a183af','500':'#8a639c','600':'#6e507c','700':'#533c5d','800':'#37283e','900':'#1c141f','950':'#130e16'}
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
      .custom-scrollbar::-webkit-scrollbar { width: 4px; }
      .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
      .custom-scrollbar::-webkit-scrollbar-thumb { background-color: #cbcdcb; border-radius: 20px; }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover { background-color: #886c93; }
      
      .toggle-checkbox:checked { right: 0; border-color: #886c93; }
      .toggle-checkbox:checked + .toggle-label { background-color: #886c93; }
  </style>
</head>
<body class="bg-ash-grey-50 min-h-screen font-sans text-gray-800">

  <aside id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-midnight-violet-900 shadow-2xl transition-all duration-300 ease-in-out z-40">
    <div class="flex flex-col h-full">
      <div class="p-6 border-b border-midnight-violet-800">
        <div class="flex items-center space-x-3 overflow-hidden">
          <div class="w-10 h-10 bg-gradient-to-br from-vintage-grape-400 to-midnight-violet-500 rounded-lg shadow-lg flex-shrink-0"></div>
          <span class="text-ash-grey-50 font-bold text-lg whitespace-nowrap">IoT Control</span>
        </div>
      </div>
      <nav class="flex-1 overflow-y-auto p-4">
        <div class="space-y-4">
            <h3 class="text-xs font-semibold text-ash-grey-400 uppercase tracking-wider mb-3">Menu</h3>
            <a href="#" class="w-full flex items-center space-x-3 px-4 py-2 rounded-lg text-ash-grey-300 hover:bg-midnight-violet-800 transition">
                <i class="fas fa-arrow-left w-4"></i>
                <span>Zpět na přehled</span>
            </a>
        </div>
      </nav>
      <div class="p-4 border-t border-midnight-violet-800">
        <div class="flex items-center space-x-3 px-4 py-2">
            <div class="w-8 h-8 bg-vintage-grape-600 rounded-full flex items-center justify-center text-white font-bold">U</div>
            <div class="text-ash-grey-50 text-sm">User</div>
        </div>
      </div>
    </div>
  </aside>

  <div id="mainContent" class="lg:ml-64 transition-all duration-300">
    
    <header class="bg-white shadow-sm border-b border-ash-grey-200 sticky top-0 z-30">
      <div class="px-6 py-4 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-midnight-violet-900">Detail Zařízení</h1>
        <div class="flex items-center space-x-4">
            <button class="p-2 text-silver-600 hover:text-vintage-grape-600 transition"><i class="fas fa-cog"></i></button>
            <button class="p-2 text-silver-600 hover:text-vintage-grape-600 transition relative">
                <i class="fas fa-bell"></i>
                <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
            </button>
        </div>
      </div>
    </header>

    <main class="p-6 space-y-6">

        <div class="flex flex-col lg:flex-row gap-6 lg:h-[340px]">
            
            <div class="flex-1 flex flex-col gap-4 h-full">
                
                <div class="bg-white rounded-xl shadow-sm border border-ash-grey-200 p-6 flex-none h-[140px] flex flex-col justify-center relative overflow-hidden">
                     
                     <div class="flex items-center gap-5">
                        <div class="relative shrink-0">
                            <div class="w-14 h-14 bg-gradient-to-br from-midnight-violet-700 to-vintage-grape-600 rounded-xl flex items-center justify-center shadow-lg">
                                <i class="fas fa-microchip text-2xl text-white"></i>
                            </div>
                            <span class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 border-2 border-white rounded-full"></span>
                        </div>

                        <div class="flex-1">
                            <div class="flex items-baseline gap-3 mb-2">
                                <h3 class="text-xl font-bold text-midnight-violet-900">Obývák - ESP32</h3>
                                <span class="text-xs font-bold text-silver-400 uppercase tracking-wider">ESP32 Dev Board</span>
                            </div>
                            
                            <div class="flex flex-wrap items-center gap-x-8 gap-y-2 text-sm">
                                <div class="flex flex-col sm:flex-row sm:items-center gap-1">
                                    <span class="text-[10px] font-bold text-silver-400 uppercase tracking-wide">IP Adresa</span>
                                    <span class="font-mono text-gray-600 font-medium">192.168.1.45</span>
                                </div>
                                <div class="flex flex-col sm:flex-row sm:items-center gap-1">
                                    <span class="text-[10px] font-bold text-silver-400 uppercase tracking-wide">MAC</span>
                                    <span class="font-mono text-gray-600 font-medium text-xs">A0:B1:C2:D3:E4:F5</span>
                                </div>
                                <div class="flex items-center gap-1.5">
                                    <span class="w-2 h-2 rounded-full bg-green-500"></span>
                                    <span class="font-bold text-green-600 text-xs uppercase">Online</span>
                                </div>
                                <div class="flex items-center gap-1.5 text-silver-600">
                                    <i class="fas fa-clock text-xs text-silver-400"></i>
                                    <span class="text-xs font-medium">4d 12h 30m</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 flex-1 min-h-0">
                    
                    <div class="bg-white p-4 rounded-xl border border-ash-grey-200 shadow-sm flex flex-col justify-between relative overflow-hidden group hover:border-vintage-grape-300 transition-all">
                        <div class="flex justify-between items-start z-10">
                            <span class="text-[10px] font-bold text-silver-500 uppercase tracking-widest">Teplota</span>
                            <i class="fas fa-thermometer-half text-vintage-grape-200 text-xl group-hover:text-vintage-grape-500 transition-colors"></i>
                        </div>
                        <div class="flex items-baseline gap-1 mt-1 z-10">
                            <span class="text-3xl font-bold text-midnight-violet-900">22.4</span>
                            <span class="text-sm text-silver-600">°C</span>
                        </div>
                        <div class="mt-2 text-[10px] text-green-600 bg-green-50 w-fit px-1.5 py-0.5 rounded z-10">
                            <i class="fas fa-arrow-up"></i> +0.2 / hod
                        </div>
                        <i class="fas fa-thermometer-half absolute -bottom-4 -right-2 text-6xl text-vintage-grape-50 opacity-50 z-0"></i>
                    </div>

                    <div class="bg-white p-4 rounded-xl border border-ash-grey-200 shadow-sm flex flex-col justify-between relative overflow-hidden group hover:border-blue-300 transition-all">
                        <div class="flex justify-between items-start z-10">
                            <span class="text-[10px] font-bold text-silver-500 uppercase tracking-widest">Vlhkost</span>
                            <i class="fas fa-tint text-blue-200 text-xl group-hover:text-blue-500 transition-colors"></i>
                        </div>
                        <div class="flex items-baseline gap-1 mt-1 z-10">
                            <span class="text-3xl font-bold text-midnight-violet-900">45</span>
                            <span class="text-sm text-silver-600">%</span>
                        </div>
                         <div class="mt-2 text-[10px] text-silver-500 bg-ash-grey-50 w-fit px-1.5 py-0.5 rounded z-10">
                            Normální stav
                        </div>
                        <i class="fas fa-tint absolute -bottom-4 -right-2 text-6xl text-blue-50 opacity-50 z-0"></i>
                    </div>

                    <div class="bg-white p-4 rounded-xl border border-ash-grey-200 shadow-sm flex flex-col justify-between relative overflow-hidden group hover:border-emerald-300 transition-all">
                        <div class="flex justify-between items-start z-10">
                            <span class="text-[10px] font-bold text-silver-500 uppercase tracking-widest">Tlak</span>
                            <i class="fas fa-tachometer-alt text-emerald-200 text-xl group-hover:text-emerald-500 transition-colors"></i>
                        </div>
                        <div class="flex items-baseline gap-1 mt-1 z-10">
                            <span class="text-3xl font-bold text-midnight-violet-900">1013</span>
                            <span class="text-sm text-silver-600">hPa</span>
                        </div>
                        <div class="mt-2 text-[10px] text-red-500 bg-red-50 w-fit px-1.5 py-0.5 rounded z-10">
                            <i class="fas fa-arrow-down"></i> -2 / hod
                        </div>
                        <i class="fas fa-tachometer-alt absolute -bottom-4 -right-2 text-6xl text-emerald-50 opacity-50 z-0"></i>
                    </div>
                </div>
            </div>

            <div class="w-full lg:w-[280px] bg-white rounded-xl border border-ash-grey-200 shadow-sm flex flex-col h-full overflow-hidden">
                <div class="p-3 border-b border-ash-grey-100 bg-ash-grey-50 flex justify-between items-center flex-none">
                    <h3 class="font-bold text-midnight-violet-900 text-xs uppercase tracking-wide">Senzory</h3>
                    <div class="flex gap-1">
                        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                    </div>
                </div>
                
                <div class="overflow-y-auto custom-scrollbar flex-1 p-0" id="sensorListContainer">
                    </div>
            </div>

        </div> <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 h-auto mt-6">
            
            <div class="lg:col-span-2 bg-white p-6 rounded-xl border border-ash-grey-200 shadow-sm">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-6 gap-4">
                    <div>
                        <h3 class="font-bold text-midnight-violet-900 text-lg" id="chartTitle">Teplota & Vlhkost</h3>
                        <p class="text-xs text-silver-500">Vývoj naměřených hodnot v čase</p>
                    </div>
                    <div class="flex bg-ash-grey-50 p-1 rounded-lg border border-ash-grey-200">
                        <button onclick="updateChart('24h')" class="px-3 py-1.5 text-xs font-bold rounded-md transition-all bg-white shadow-sm text-midnight-violet-900">24 Hod</button>
                        <button onclick="updateChart('7d')" class="px-3 py-1.5 text-xs font-bold rounded-md transition-all text-silver-500 hover:text-midnight-violet-900 hover:bg-white/50">7 Dní</button>
                    </div>
                </div>
                <div class="relative w-full h-[300px]">
                    <canvas id="mainChart"></canvas>
                </div>
            </div>

            <div class="bg-white p-6 rounded-xl border border-ash-grey-200 shadow-sm flex flex-col">
                <h3 class="font-bold text-midnight-violet-900 mb-4">Poslední události</h3>
                <div class="flex-1 overflow-y-auto pr-2 space-y-4 max-h-[300px] custom-scrollbar">
                    <div class="flex gap-3 items-start">
                        <div class="w-8 h-8 rounded-full bg-red-50 flex items-center justify-center shrink-0 mt-0.5"><i class="fas fa-exclamation text-xs text-red-500"></i></div>
                        <div><p class="text-sm font-medium text-gray-800">Alarm: Teplota > 28°C</p><span class="text-[10px] text-silver-400">Před 20 min</span></div>
                    </div>
                    <div class="flex gap-3 items-start">
                        <div class="w-8 h-8 rounded-full bg-green-50 flex items-center justify-center shrink-0 mt-0.5"><i class="fas fa-wifi text-xs text-green-500"></i></div>
                        <div><p class="text-sm font-medium text-gray-800">Zařízení připojeno</p><span class="text-[10px] text-silver-400">Včera, 14:30</span></div>
                    </div>
                     <div class="flex gap-3 items-start">
                        <div class="w-8 h-8 rounded-full bg-vintage-grape-50 flex items-center justify-center shrink-0 mt-0.5"><i class="fas fa-power-off text-xs text-vintage-grape-600"></i></div>
                        <div><p class="text-sm font-medium text-gray-800">Relé manuálně zapnuto</p><span class="text-[10px] text-silver-400">Včera, 10:15</span></div>
                    </div>
                </div>
            </div>
        </div>

    </main>
  </div>

  <script>
    // --- Generování Kompaktního Seznamu Senzorů ---
    const sensorsData = [
        { id: 'temp1', name: 'Teplota', value: '22.4', unit: '°C', icon: 'fa-thermometer-half', color: 'text-vintage-grape-600' },
        { id: 'hum1', name: 'Vlhkost', value: '45', unit: '%', icon: 'fa-tint', color: 'text-blue-500' },
        { id: 'pres1', name: 'Tlak', value: '1013', unit: 'hPa', icon: 'fa-tachometer-alt', color: 'text-emerald-500' },
        { id: 'co2', name: 'CO2', value: '420', unit: 'ppm', icon: 'fa-wind', color: 'text-gray-600' },
        { id: 'light', name: 'Světlo', value: '350', unit: 'lx', icon: 'fa-sun', color: 'text-amber-500' },
        { id: 'cpu', name: 'CPU', value: '48.2', unit: '°C', icon: 'fa-microchip', color: 'text-red-500' },
        { id: 'bat', name: 'Baterie', value: '85', unit: '%', icon: 'fa-battery-three-quarters', color: 'text-green-600' },
        { id: 'rssi', name: 'Signál', value: '-62', unit: 'dBm', icon: 'fa-wifi', color: 'text-midnight-violet-600' },
        { id: 'ext1', name: 'Ext. Teplota', value: '15.2', unit: '°C', icon: 'fa-thermometer-half', color: 'text-blue-400' },
        { id: 'water', name: 'Hladina', value: '80', unit: '%', icon: 'fa-water', color: 'text-cyan-500' }
    ];

    const listContainer = document.getElementById('sensorListContainer');
    
    sensorsData.forEach((sensor, index) => {
        const borderClass = index !== sensorsData.length - 1 ? 'border-b border-ash-grey-50' : '';
        const html = `
            <div onclick="updateChart('${sensor.id}')" class="group flex items-center justify-between px-3 py-2.5 hover:bg-ash-grey-50 cursor-pointer transition-colors ${borderClass}">
                <div class="flex items-center gap-2 overflow-hidden">
                    <div class="w-6 h-6 rounded bg-white flex flex-none items-center justify-center shadow-sm border border-ash-grey-100 text-xs">
                        <i class="fas ${sensor.icon} ${sensor.color}"></i>
                    </div>
                    <p class="text-xs font-medium text-gray-700 truncate group-hover:text-midnight-violet-900">${sensor.name}</p>
                </div>
                <div class="flex-none text-right ml-2">
                    <span class="text-xs font-bold text-gray-800">${sensor.value}</span>
                    <span class="text-[10px] text-silver-500">${sensor.unit}</span>
                </div>
            </div>
        `;
        listContainer.innerHTML += html;
    });

    // --- Graf ---
    const ctx = document.getElementById('mainChart').getContext('2d');
    const gradient = ctx.createLinearGradient(0, 0, 0, 300);
    gradient.addColorStop(0, 'rgba(136, 108, 147, 0.4)');
    gradient.addColorStop(1, 'rgba(136, 108, 147, 0.0)');

    let mainChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['00:00', '03:00', '06:00', '09:00', '12:00', '15:00', '18:00', '21:00'],
            datasets: [{
                label: 'Hodnota',
                data: [20, 19.5, 19, 21, 23.5, 24, 22.5, 21],
                borderColor: '#886c93',
                backgroundColor: gradient,
                borderWidth: 2,
                tension: 0.4,
                fill: true,
                pointRadius: 0,
                pointHoverRadius: 6
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
                x: { grid: { display: false }, ticks: { color: '#9aa092', font: { size: 10 } } },
                y: { grid: { color: '#f2f3f1' }, ticks: { color: '#9aa092' } }
            }
        }
    });

    window.updateChart = function(type) {
        const newData = mainChart.data.datasets[0].data.map(v => v + (Math.random() - 0.5) * 5);
        mainChart.data.datasets[0].data = newData;
        mainChart.update();
    }
  </script>
</body>
</html>